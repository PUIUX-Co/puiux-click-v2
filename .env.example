# ==========================================
# PUIUX Click - Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ==========================================
# Application
# ==========================================
NODE_ENV=development
APP_NAME=PUIUX Click
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# ==========================================
# Frontend (Next.js)
# ==========================================
NEXT_PUBLIC_APP_NAME=PUIUX Click
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_API_GRAPHQL_URL=http://localhost:4000/graphql

# ==========================================
# Backend (NestJS)
# ==========================================
PORT=4000
HOST=0.0.0.0
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# ==========================================
# Database (PostgreSQL)
# ==========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=puiux_click_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password
DATABASE_SSL=false

# Full connection string (alternative)
DATABASE_URL=postgresql://postgres:your_secure_password@localhost:5432/puiux_click_dev

# ==========================================
# Redis (Caching & Sessions)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Full connection string (alternative)
REDIS_URL=redis://localhost:6379

# ==========================================
# Authentication & Security
# ==========================================

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_REFRESH_EXPIRATION=30d

# Session
SESSION_SECRET=your-super-secret-session-key-min-32-characters

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Password Hashing
BCRYPT_ROUNDS=10

# ==========================================
# Email (for notifications, verification, etc.)
# ==========================================

# Email Provider (smtp, sendgrid, mailgun, ses)
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@puiuxclick.com
SMTP_FROM_NAME=PUIUX Click

# SendGrid (if using)
SENDGRID_API_KEY=

# Mailgun (if using)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# AWS SES (if using)
AWS_SES_REGION=
AWS_SES_ACCESS_KEY=
AWS_SES_SECRET_KEY=

# ==========================================
# AI / Claude (Anthropic)
# ==========================================
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4000
ANTHROPIC_TEMPERATURE=0.7

# AI Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=20
AI_RATE_LIMIT_PER_HOUR=100

# ==========================================
# Storage / File Uploads
# ==========================================

# Storage Provider (local, s3, cloudinary)
STORAGE_PROVIDER=local

# Local Storage
STORAGE_LOCAL_PATH=./uploads
STORAGE_LOCAL_URL=http://localhost:3000/uploads

# AWS S3 (if using)
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET=puiux-click-uploads
AWS_S3_ACCESS_KEY=
AWS_S3_SECRET_KEY=
AWS_S3_CDN_URL=

# Cloudinary (if using)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Max file size (in bytes) - 10MB
MAX_FILE_SIZE=10485760

# ==========================================
# Payment Gateways (Saudi Arabia Focus)
# ==========================================

# Moyasar (Primary - Saudi)
MOYASAR_API_KEY=
MOYASAR_SECRET_KEY=
MOYASAR_PUBLISHABLE_KEY=
MOYASAR_WEBHOOK_SECRET=

# Tap Payments (Saudi)
TAP_SECRET_KEY=
TAP_PUBLISHABLE_KEY=
TAP_WEBHOOK_SECRET=

# PayTabs (Saudi)
PAYTABS_SERVER_KEY=
PAYTABS_CLIENT_KEY=
PAYTABS_PROFILE_ID=

# HyperPay (MENA)
HYPERPAY_ENTITY_ID=
HYPERPAY_ACCESS_TOKEN=
HYPERPAY_TEST_MODE=true

# Stripe (International)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal (International)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ==========================================
# Analytics & Monitoring
# ==========================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=

# PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
NEXT_PUBLIC_SENTRY_DSN=

# ==========================================
# External Services
# ==========================================

# Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# WhatsApp Business API
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# Instagram Basic Display API
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_REDIRECT_URI=

# ==========================================
# Deployment (Vercel)
# ==========================================
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# ==========================================
# CDN (Cloudflare)
# ==========================================
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# ==========================================
# Feature Flags
# ==========================================
FEATURE_CHAT_BUILDER=true
FEATURE_VOICE_BUILDER=false
FEATURE_ECOMMERCE=true
FEATURE_BLOG=true
FEATURE_BOOKING=true
FEATURE_MULTILINGUAL=true

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# Logging
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# Development Only
# ==========================================
DEBUG=false
VERBOSE=false

# Seed database on start
SEED_DATABASE=false

# ==========================================
# Testing
# ==========================================
TEST_DATABASE_URL=postgresql://postgres:test@localhost:5432/puiux_click_test

# ==========================================
# Multi-tenancy
# ==========================================
SUBDOMAIN_SUFFIX=.puiuxclick.com
CUSTOM_DOMAIN_ENABLED=true

# ==========================================
# Backup & Maintenance
# ==========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_S3_BUCKET=

# ==========================================
# Localization
# ==========================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
NEXT_PUBLIC_DEFAULT_LANGUAGE=ar

# ==========================================
# SEO & Meta
# ==========================================
NEXT_PUBLIC_SITE_NAME=PUIUX Click
NEXT_PUBLIC_SITE_DESCRIPTION=موقعك الاحترافي في دقائق
NEXT_PUBLIC_SITE_URL=https://puiuxclick.com

# ==========================================
# Support & Contact
# ==========================================
SUPPORT_EMAIL=support@puiuxclick.com
SUPPORT_PHONE=+966XXXXXXXXX
SUPPORT_WHATSAPP=+966XXXXXXXXX

# ==========================================
# Webhooks (for external integrations)
# ==========================================
WEBHOOK_SECRET=your-webhook-secret-key

# ==========================================
# Notes:
# ==========================================
# 1. Never commit this file with real values
# 2. Keep .env.example updated with new variables
# 3. Use strong, unique values for secrets
# 4. Rotate secrets regularly in production
# 5. Use different values for dev/staging/production
