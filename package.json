{
  "name": "puiux-click",
  "version": "2.0.0",
  "description": "PUIUX Click - Build professional websites in minutes",
  "private": true,
  "author": "PUIUX - Mahmoud Abu Alnaga",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter @puiux/web dev",
    "dev:api": "pnpm --filter @puiux/api dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @puiux/web build",
    "build:api": "pnpm --filter @puiux/api build",
    "start": "turbo run start",
    "start:web": "pnpm --filter @puiux/web start",
    "start:api": "pnpm --filter @puiux/api start",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "test:e2e": "pnpm --filter @puiux/web test:e2e",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter @puiux/api db:generate",
    "db:migrate": "pnpm --filter @puiux/api db:migrate",
    "db:seed": "pnpm --filter @puiux/api db:seed",
    "db:studio": "pnpm --filter @puiux/api db:studio",
    "db:reset": "pnpm --filter @puiux/api db:reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**", "build/**"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "test": {
        "dependsOn": ["^build"]
      },
      "typecheck": {
        "dependsOn": ["^typecheck"]
      },
      "clean": {
        "cache": false
      }
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,mdx}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
