# Application
NODE_ENV=test
PORT=4001
APP_NAME=PUIUX Click API Test
APP_URL=http://localhost:4001
FRONTEND_URL=http://localhost:3000

# Database - Use test database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/puiux_click_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT Authentication
JWT_SECRET=test-jwt-secret-key-min-32-characters-for-e2e-tests-only
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-min-32-characters-for-e2e-tests
JWT_REFRESH_EXPIRES_IN=7d

# Email (Phase 2)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@puiuxclick.com

# AI Services
# Anthropic Claude
ANTHROPIC_API_KEY=test-anthropic-key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# OpenAI
OPENAI_API_KEY=test-openai-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Unsplash (Images)
UNSPLASH_ACCESS_KEY=test-unsplash-key
UNSPLASH_SECRET_KEY=test-unsplash-secret
UNSPLASH_APPLICATION_ID=test-unsplash-app

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads-test

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=1000

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_AI_GENERATION=false
ENABLE_AI_TEXT_GENERATION=false
ENABLE_AI_IMAGE_SUGGESTIONS=false

# Monitoring (Phase 2)
SENTRY_DSN=
